html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        meta(name='description', content='A source for facts about cats.')
        link(type='text/css', rel='stylesheet', href='/css/bootstrap.min.css', media='screen,projection')
        link(type='text/css', rel='stylesheet', href='/css/bootstrap-select.min.css', media='screen,projection')
        link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' rel='stylesheet')
        link(type='text/css', rel='stylesheet', href='/css/theme.css', media="screen,projection")
        title catfacts
    body
        script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
        script(type='text/javascript', src='/js/jquery.inputmask.bundle.min.js')
        script(type='text/javascript', src='/js/bootstrap-select.min.js')
        script(type='text/javascript', src='/js/bootstrap.min.js')
        script(type='text/javascript', src='/js/index.js')
        nav.navbar.navbar-default(role='navigation')
            a(href='/home/')
                img(src='/img/cat.png', height='40px')
            ul(class='nav nav-pills navbar-right')
                li(role='navigation' class= (nav === 0 ? 'active' : ''))
                    a(href='/home/') Home
                li(role='navigation' class= (nav === 1 ? 'active' : ''))
                    a(href='/about/') About
                li(role='navigation' class= (nav === 2 ? 'active' : ''))
                    a#session(href='/login/') Log in
        #title
            h1 catfacts 2.0
            h3#subtitle watching the world burn, with facts about cats
        div#wrap
            block content